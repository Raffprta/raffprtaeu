{#
    Index page view.
#}

{% extends "base.twig" %}

{% block content %}
{% if posts %}
{% for post in posts %}
<section class="padding bck color">
  <div class="row" id="blog">
    <div class="column_6" id="post-info">
      <span class="preamble">
        ID: {{ post.id }}
        Posted: {{ post.date }}
        Tags: {{ post.tags }}
      </span>
    </div>  

    <div class="column_6 offset_4 color book theme" id="post-name">
      <h3> <a href="view.php?ID={{post.id}}">{{ post.title }}</a></h3>
    </div>

    <div class="column_12 margin-right content-wrapper" id="post-content">
      <p class="post"> {{ post.content|nl2br }} </p>
    </div>
  </div>
</section>

{% endfor %}
	
{% else %}

  {# No posts to the blog #}
  <section class="alert"">
    <p><span class="icon info-sign"></span> This blog has no posts! Wait for the admin to make some.</p>
  </section>
  
{% endif %}
{% endblock %}